{
  "name": "@jalik/observer",
  "version": "1.2.1",
  "description": "A library to observe events and trigger callbacks.",
  "license": "MIT",
  "keywords": [
    "event",
    "observer",
    "listener"
  ],
  "author": {
    "name": "Karl Stein",
    "email": "karl.stein.pro@gmail.com",
    "url": "https://github.com/jalik"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jalik/js-observer.git"
  },
  "bugs": {
    "url": "https://github.com/jalik/js-observer/issues"
  },
  "sideEffects": false,
  "esnext": "./esm/index.js",
  "main": "./dist/index.js",
  "module": "./esm/index.js",
  "files": [
    "/dist",
    "/esm"
  ],
  "scripts": {
    "build": "npm run build-cjs && npm run build-esm",
    "build-cjs": "tsc -p tsconfig.cjs.json",
    "build-esm": "tsc",
    "clean": "rimraf ./dist ./esm",
    "dev": "tsc --watch",
    "lint": "eslint --ext .ts .",
    "lint-fix": "eslint --ext .ts --fix .",
    "prepare": "npm run clean && npm run build",
    "prepublishOnly": "npm run lint && npm test",
    "test": "jest --passWithNoTests --coverage=true"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-typescript": "^7.21.4",
    "@jest/globals": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.5.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.4"
  }
}
